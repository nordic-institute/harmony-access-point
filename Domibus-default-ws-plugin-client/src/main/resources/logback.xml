<?xml version="1.0" encoding="UTF-8"?>

<configuration>
    <!-- pattern definition -->
    <property name="encoderPattern" value="%d{ISO8601} [%X{d_user}] [%X{d_domain}] [%X{d_messageId}] [%thread] %5p %c{1}:%L - %m%n" scope="global"/>
	<property name="encoderPatternColor" value="%d{HH:mm:ss.SSS} [%5.-5X{thread}] %highlight([%5.5X{d_user}] [%8.-8X{d_messageId}] %5p) %50.-50(.\(%F:%L\\)) - %m%n" scope="global"/>

    <appender name="file" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>target/logs/client.log</file>
        <filter class="ch.qos.logback.core.filter.EvaluatorFilter">
            <evaluator class="ch.qos.logback.classic.boolex.OnMarkerEvaluator">
                <marker>SECURITY</marker>
                <marker>BUSINESS</marker>
            </evaluator>
            <onMismatch>NEUTRAL</onMismatch>
            <onMatch>DENY</onMatch>
        </filter>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <!-- rollover daily -->
            <fileNamePattern>target/logs/client-%d{yyyy-MM-dd}.%i.log</fileNamePattern>
            <!-- each file should be at most 30MB, keep 60 days worth of history, but at most 20GB -->
            <maxFileSize>30MB</maxFileSize>
            <maxHistory>60</maxHistory>
            <totalSizeCap>20GB</totalSizeCap>
        </rollingPolicy>
        <encoder>
            <pattern>${encoderPattern}</pattern>
        </encoder>
    </appender>


    <appender name="stdout" class="ch.qos.logback.core.ConsoleAppender">
        <Target>System.out</Target>
        <encoder>
            <pattern>${encoderPatternColor}</pattern>
        </encoder>
    </appender>

    <logger name="eu.domibus.plugin.ws" level="INFO"/>

    <root level="INFO">
        <appender-ref ref="file"/>
        <appender-ref ref="stdout"/>
    </root>
	
</configuration>