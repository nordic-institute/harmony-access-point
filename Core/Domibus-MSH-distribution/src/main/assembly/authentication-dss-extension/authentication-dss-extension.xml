
<assembly
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
        xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
    <id>authentication-dss-extension</id>
    <formats>
        <format>zip</format>
    </formats>
    <includeBaseDirectory>true</includeBaseDirectory>
    <baseDirectory></baseDirectory>
    <includeSiteDirectory>false</includeSiteDirectory>
    <files>
        <file>
            <source>${project.basedir}/../Domibus-authentication-dss-extension/src/main/conf/authentication-dss-extension.properties</source>
            <outputDirectory>extensions/config</outputDirectory>
            <filtered>false</filtered>
        </file>
        <file>
            <source>${project.basedir}/../Domibus-authentication-dss-extension/src/main/conf/ojkeystore.p12</source>
            <outputDirectory>truststore</outputDirectory>
            <filtered>false</filtered>
        </file>
        <file>
            <source>${project.basedir}/../Domibus-authentication-dss-extension/src/main/conf/dss-tls-truststore.p12</source>
            <outputDirectory>truststore</outputDirectory>
            <filtered>false</filtered>
        </file>
        <!-- Extention jar -->
        <file>
            <source>${project.basedir}/../Domibus-authentication-dss-extension/target/domibus-authentication-dss-extension-${project.version}.jar</source>
            <outputDirectory>extensions/lib</outputDirectory>
            <filtered>false</filtered>
        </file>

    </files>
</assembly>